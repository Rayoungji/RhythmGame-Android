<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rythmbackground"
    tools:context=".GamePage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:layout_weight="20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#8C53B4"
            android:fontFamily="@font/sangmoon"
            android:gravity="center"
            android:text="게임 진행 페이지"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/touch1"
            android:layout_marginLeft="30dp"
            android:layout_width="70dp"
            android:layout_height="610dp"
            android:src="@drawable/noterout"/>

            <ImageView
                android:id="@+id/note1"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/note"/>
            <ImageView
                android:id="@+id/note5"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/note"/>

            <ImageView
                android:id="@+id/touch2"
                android:layout_marginLeft="130dp"
                android:layout_width="70dp"
                android:layout_height="610dp"
                android:src="@drawable/noterout"/>

            <ImageView
                android:id="@+id/note2"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:src="@drawable/note"/>

            <ImageView
                android:id="@+id/note6"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:src="@drawable/note"/>

            <ImageView
                android:id="@+id/touch3"
                android:layout_width="70dp"
                android:layout_height="610dp"
                android:layout_marginLeft="230dp"
                android:background="#00000000"
                android:src="@drawable/noterout" />

            <ImageView
                android:id="@+id/note3"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="240dp"
                android:src="@drawable/note"/>

            <ImageView
                android:id="@+id/note7"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="240dp"
                android:src="@drawable/note"/>

            <ImageView
                android:id="@+id/touch4"
                android:layout_marginLeft="320dp"
                android:layout_width="70dp"
                android:layout_height="610dp"
                android:src="@drawable/noterout"/>

            <ImageView
                android:id="@+id/note4"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="330dp"
                android:src="@drawable/note"/>

            <ImageView
                android:id="@+id/note8"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginLeft="330dp"
                android:src="@drawable/note"/>

            <ImageView
                android:id="@+id/judgeLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="355dp"
                android:src="@drawable/judgeline" />
            <ImageView
                android:id="@+id/JugeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"
                android:src="@drawable/judgeline" />

            <TextView
            android:id="@+id/text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:textSize="30dp" />

            <TextView
            android:id="@+id/scoretext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
                android:layout_marginLeft="100dp"
            android:textSize="30dp" />

        </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/sangmoon"
            android:gravity="center"
            android:background="#8C53B4"
            android:text="Start"
            android:textSize="20dp"
            android:textColor="#FFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/exit"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/sangmoon"
            android:gravity="center"
            android:background="#8C53B4"
            android:text="Exit"
            android:textSize="20dp"
            android:textColor="#FFFF"/>
    </LinearLayout>

</LinearLayout>
